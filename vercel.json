{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server.js",
            "methods": [
                "GET",
                "POST"
            ]
        }
    ],
    "crons": [
        {
            "path": "ping",
            "schedule": "0 5 * * *"
        }
    ]
}